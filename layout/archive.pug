
extends includes/layout.pug

block content
  - var categoriesList = list_categories({ show_count: theme.category.show_count })
  - var tagsList = list_tags({ show_count: theme.tag.show_count })
  - var archivesList = list_archives({ show_count: theme.archive.show_count })

  .main_column#page
    if !is_year()
      span.title=_p('page.archive')

      each item in theme.archive.show
        case item
          when 'archive'
            include includes/archive/archive.pug
          when 'category'
            include includes/archive/category.pug
          when 'tag'
            include includes/archive/tag.pug

      //- aside
      //-   h2 Categories
      //-   if categoriesList
      //-     != categoriesList
      //-   else
      //-     p=_p('page.no_category')
      //- br

      //- aside
      //-   h2 Tags
      //-   if tagsList
      //-     != tagsList
      //-   else
      //-     p=_p('page.no_tag')
      //- br

      //- aside
      //-   h2 Archives
      //-   if archivesList
      //-     != archivesList
      //-   else
      //-     p=_p('page.no_archive')
      //- br

    else

      h1= page.month + '/' + page.year

      - page.posts.each(function(article){
        .archive-list-item
          a(href=url_for(article.path))= article.title
          time(datetime=date_xml(article.date))= date(article.date)
      - })

      //- #paginator!= paginator()
      include includes/page_switch.pug
