
extends includes/layout.pug

block content
  - var categoriesList = list_categories({ show_count: true })
  - var tagsList = list_tags({ show_count: true })
  - var archivesList = list_archives({ show_count: true })

  .main_column#page
    if !is_year()
      span.title=_p('page.archive')

      aside
        h2 Categories
        if categoriesList
          != categoriesList
        else
          p None.
      br

      aside
        h2 Tags
        if tagsList
          != tagsList
        else
          p None.
      br

      aside
        h2 Archives
        if archivesList
          != archivesList
        else
          p None.
      br

    else

      h1= page.month + '/' + page.year

      - page.posts.each(function(article){
        .archive-list-item
          a(href=url_for(article.path))= article.title
          time(datetime=date_xml(article.date))= date(article.date)
      - })

      //- #paginator!= paginator()
      include includes/page_switch.pug
