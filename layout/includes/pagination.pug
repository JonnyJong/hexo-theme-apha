-
  var options = {
    prev_text: '<i class="fa fa-chevron-left fa-tw"></i>',
    next_text: '<i class="fa fa-chevron-right fa-tw"></i>',
    mid_size: 1,
    escape: false
  }
nav#page_switch
  if(!is_post())
    div.page_switch
      !=paginator(options)
  else
    if(page.prev)
      .prev-post.pull-left
        a(href=url_for(page.prev.path))
          i.fa.fa-chevron-left
          span=page.prev.title
    if(page.next)
      .next-post.pull-right
        a(href=url_for(page.next.path))
          span=page.next.title
          i.fa.fa-chevron-right