  .archive-list
    border-left 4px solid var(--main-color)
    margin 16px
    padding-left 13px
    li
      list-style-type none
      line-height 36px
    li:before
      position absolute
      width 10px
      height 10px
      border 4px solid var(--main-color)
      background white
      border-radius 50%
      content ''
      transform translateX(-24px) translateY(9px)
    a
      line-height 36px
      display inline-block
      padding-right 16px
      color var(--text-color-r)
      transition .1s
    a:hover
      text-decoration none
      color var(--main-color)
      font-size 18px