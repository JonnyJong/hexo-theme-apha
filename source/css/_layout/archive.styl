article.archive
  ul
    list-style none
    padding-left 1rem
    // position relative
    padding-top 0.4rem
    li
      position relative
      padding 0.4rem 0 0.4rem 1.5rem 
      // margin 0.4rem 0
      span::before
        content ' - '
        border none
        position static
      a:hover
        text-decoration underline
        text-decoration-thickness 2px
      ::before
        // font-family 'Font Awesome 5 Free'
        // content '\f187'
        content ''
        width .4rem
        height .4rem
        position absolute
        left 0
        top .5rem
        border 4px solid var(--main-color)
        border-radius 100%
      ul
        padding-left 0rem