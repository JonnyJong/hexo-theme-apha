// 整体
$banner_height = hexo-config('custom.index_banner_height') ? convert(hexo-config('custom.index_banner_height')) : 100vh
.header
  height $banner_height
  position relative
  if hexo-config('custom.navbar.downside')
    if hexo-config('custom.navbar.move_to_top')
      margin-top -60px
      transform: translate(0px, 60px);
    else
      margin-top -60px
      transform: translate(0px, 60px);
      margin-bottom 60px
.header_img
  background hexo-config('custom.index_banner_img') ? convert(hexo-config('custom.index_banner_img')) : var(--main-color)
  // height 100%
  // width 100%
  background-position center
  background-size cover
  if hexo-config('custom.index_banner_img_parallax')
    background-attachment fixed

//banner 图
.header .header_img
  overflow hidden
  position relative
  height 100%
  width 100%
  top 0px
  // z-index -1
.header .header_img img
  height 100%
  width 100%
  object-fit cover
  // background-color: var(--main-color)

// 导航栏
.navbar
  // 基本
  width hexo-config('custom.navbar.outer_width') ? convert(hexo-config('custom.navbar.outer_width')) : 100%
  max-width hexo-config('custom.navbar.outer_max_width') ? convert(hexo-config('custom.navbar.outer_max_width')) : 100%
  height $navbar_height
  color var(--text-color-r)
  user-select none
  // text-shadow: 0px 0px 4px var(--shadow-color)
  background rgba(255,255,255,$navbar-opacity)
  if hexo-config('custom.navbar.blur') != 0
    backdrop-filter: saturate(180%) blur($navbar-blur)
  box-shadow var(--b-shadow-lite)
  border-radius hexo-config('custom.navbar.border_radius') ? convert(hexo-config('custom.navbar.border_radius')) : 0px
  z-index 100
  position fixed
  if hexo-config('custom.navbar.top') != 'none'
    top hexo-config('custom.navbar.top') ? convert(hexo-config('custom.navbar.top')) : 0px
  if hexo-config('custom.navbar.bottom') != 'none'
    bottom hexo-config('custom.navbar.bottom') ? convert(hexo-config('custom.navbar.bottom')) : 0px
  animation navbar_show .2s ease-in-out
  white-space nowrap
  font-size $navbar_height*0.27
.navbar.nav_hide
  top $navbar_height*-1
  animation navbar_hide .2s ease-in-out
.navbar_inner
  display flex
  height 100%
  width hexo-config('custom.navbar.inner_width') ? convert(hexo-config('custom.navbar.inner_width')) : 90%
  max-width hexo-config('custom.navbar.inner_max_width') ? convert(hexo-config('custom.navbar.inner_max_width')) : 1400px
  margin auto

.nav_item_outer
  height 100%
  margin 0 hexo-config('custom.navbar.item_distance') ? convert(hexo-config('custom.navbar.item_distance')) : 0px
  position relative
  transition all 0.1s
.nav_item_inner
  display flex
  align-items center
  height 100%
  padding 0 hexo-config('custom.navbar.item_inside_distance') ? convert(hexo-config('custom.navbar.item_inside_distance')) : 8px

.navbar
  .width_in_info
    width 16px
  img
    height $navbar_height*0.6
  a
    color var(--text-color-r)
  i
    margin-right 4px
  i.ho_rotate_90
    transition all 0.1s
    margin 0 0 0 4px
  .fakeA
    cursor pointer
    display unset
  .site_title
    font-size $navbar_height*0.4
    font-weight bold
  .placeholder
    flex auto
  .hr
    width 2px
    background var(--text-color-rf)
    opacity 0.25
    margin-top $navbar_height*0.2
    height 60%
  .hr:hover
    background var(--text-color-rf)
  a.side_nav_btn
    cursor pointer
    i
      margin-right 0
      font-size $navbar_height*0.3
  .act_outer
    display flex
  .act_inner
    flex-direction column
    justify-content center
    transition .1s
  .act_inner:hover
    background var(--main-color-bgh)
.navbar#pcNavbar .placeholder:hover
.navbar#mblNavbar .placeholder:hover
.nav_item_outer.noLink:hover
.navbar#pcNavbar .nav_item_outer.act_outer:hover
.navbar#mblNavbar .nav_item_outer.act_outer:hover
  background none
.nav_item_outer.noLink
  background none
.nav_item_outer.noLink span
  cursor default

#pcNavbar
  .nav_sub_menu
    position absolute
    display none
    max-width max-content
    background var(--body-color)
    box-shadow var(--b-shadow-lite)
    top $navbar_height
    right 0
    animation nav_sub_menu .2s ease
    border-radius hexo-config('custom.navbar.sub_menu_border_radius') ? convert(hexo-config('custom.navbar.sub_menu_border_radius')) : 6px
  .nav_sub_item
    width 100%
    min-width max-content
    transition 0.05s
  .nav_sub_item:hover
    background var(--main-color-bgh)
  .nav_sub_item a
    height 48px
    display flex
    align-items center
    padding 0 16px
  .nav_item_outer:hover
    background var(--main-color-bgh)
    .nav_sub_menu
      display block
    .ho_rotate_90
      transform: rotate(90deg)

// 手机端侧边栏
a.nav_menu_cover
  display none
  position fixed
  height 100vh
  width 100vw
  top 0
  z-index 100
  background #000
  opacity .5
a.nav_menu_cover.show
  display block
  animation nav_menu_cover_show .2s ease-in-out
.navbar.show#mblNavbar
  transform translateX(0)
#mblNavbar
  if hexo-config('custom.navbar.mbl_menu') != right
    transform translateX(-100%)
    left 0
  else
    transform translateX(100%)
    right 0
  width hexo-config('custom.navbar.mbl_outer_width') ? convert(hexo-config('custom.navbar.mbl_outer_width')) : max-content
  height 100vh
  padding $mbl_vertical_padding $mbl_horizontal_padding
  max-width 100vw
  font-size $mbl_item_height*0.36
  overflow auto
  transition .2s
  .navbar_inner
    flex-direction column
    width 100%
    --mbl_vertical_padding $mbl_vertical_padding*2
    height calc(100vh - var(--mbl_vertical_padding))
    transition .2s
    .nav_item_outer
      min-height $mbl_item_height
      height max-content
      img
        height $mbl_item_height*0.6
      .site_title
        font-size $mbl_item_height*0.5
    .hr
      height 2px
      min-height 2px
      width 100%
      margin 4px 0
    .menu
      height $mbl_item_height
  .nav_sub_menu
    position relative
    display none
    width 100%
    background var(--bg-color)
    box-shadow inset var(--b-shadow-lite)
  .nav_sub_item
    width 100%
    transition 0.05s
  .nav_sub_item:hover
    background var(--main-color-bgh)
  .nav_sub_item a
    height $mbl_item_height
    display flex
    align-items center
    padding 0 8px
  a.short .nav_item_inner
    width 60%
    display inline-block
    line-height $mbl_item_height
  i.fa.fa-chevron-right.ho_rotate_90
    display inline-block
    line-height $mbl_item_height
    margin-left 20px
  .nav_item_outer:hover
    background var(--main-color-bgh)
    .nav_sub_menu
      display block
    .ho_rotate_90
      transform: rotate(90deg)
  .site_info
    .nav_item_inner
      flex-direction column
      padding $mbl_vertical_padding $mbl_horizontal_padding
      img
        height 40px
        padding 8px 0

// 大标题
.header_info
  height 100%
  position relative
  transition .5s
  @media screen and (min-width: $max-width)
    width $header-min-width
    margin auto
  @media screen and (max-width: $max-width) and (min-width 1001px)
    margin auto auto auto 100px

  .site_big_title
    position absolute
    top 50%
    transform translate(0, -50%)
    .title
      font-size $index_big_title_font_size
      line-height 1
      font-weight bold
      color #fffe
      text-shadow: 0 0 24px #000d
      transition .5s
    .subtitle
      font-size $index_subtitle_font_size
      line-height 1
      // margin-top 8px
      color #fffe
      text-shadow: 0 0 8px #000d
      transition .5s