// 整体
$banner_height = hexo-config('custom.index_banner_height') ? convert(hexo-config('custom.index_banner_height')) : 100vh
.header[header="home"]
  height $banner_height
  if hexo-config('custom.ui.navbar.downside')
    if hexo-config('custom.ui.navbar.move_to_top')
      margin-top -60px
      transform: translate(0px, 60px);
    else
      margin-top -60px
      transform: translate(0px, 60px);
      margin-bottom 60px
  // background-image: hexo-config('custom.index_banner_img') ? convert(hexo-config('custom.index_banner_img')) : none
.header[header="post"]
.header[header="page"]
  if hexo-config('custom.ui.navbar.downside') 
    height calc(30rem - 60px)
  else
    height 30rem
    margin-top -60px

//banner 图
.header[header="post"] .header_img
.header[header="page"] .header_img
  height calc(30rem - 60px)
.header .header_img
  overflow hidden
  position absolute
  height 100%
  width 100%
  top 0px
  z-index -1
.header .header_img img
  height 100%
  width 100%
  object-fit cover
  background-color: var(--main-color)
// 导航栏
#navbar
  if hexo-config('custom.ui.navbar.downside') 
    if hexo-config('custom.ui.navbar.move_to_top') 
      position -webkit-sticky
      position sticky
      top hexo-config('custom.ui.navbar.distance') ? convert(hexo-config('custom.ui.navbar.distance')) : 0
    else
      position fixed
      bottom hexo-config('custom.ui.navbar.distance') ? convert(hexo-config('custom.ui.navbar.distance')) : 0
      left 0
      right 0
  else
    position fixed
    top hexo-config('custom.ui.navbar.distance') ? convert(hexo-config('custom.ui.navbar.distance')) : 0
    left 0
    right 0
  display flex
  align-items center
  width hexo-config('custom.ui.navbar.width') ? convert(hexo-config('custom.ui.navbar.width')) : 100%
  margin auto
  min-width max-content
  height 60px
  color var(--re-text-color)
  text-shadow: 0px 0px 4px var(--shadow-color)
  background rgba(255,255,255,$navbar-opacity)
  if hexo-config('custom.ui.navbar.blur') != 0
    backdrop-filter: saturate(180%) blur($navbar-blur)
  box-shadow 0px 0px 16px var(--shadow-color)
  if hexo-config('custom.ui.navbar.center') 
    justify-content center
  border-radius hexo-config('custom.ui.navbar.border_radius') ? convert(hexo-config('custom.ui.navbar.border_radius')) : 0px
  z-index 100
#navbar a
  color var(--re-text-color)
#navbar i
  padding-right 8px

#navbar div.nav_menu
  padding 0 $navbar-LR-padding 0px 8px
#navbar div.menu_items
  display inline
#navbar div.menu_item
  position relative
  display inline-block
  padding 20px 8px 0px 8px
  height 40px
  cursor pointer
#navbar div.menu_item
  font-size 1em
  font-weight lighter
#navbar div.menu_item div.sub_menu 
  display none
  position absolute
  width max-content
  background rgba(255,255,255,0.9)
  margin 20px 0px
  left 50%
  top 50%
  transform: translate(-50%, 10px)
  box-shadow: 0px 0px 16px var(--shadow-color)
#navbar div.menu_item:hover div.sub_menu
  display block
#navbar div.sub_menu_item
  padding 10px 16px
#navbar div.sub_menu_item:hover
  background var(--main-color-fade)

#navbar .sitetitle
  if hexo-config('custom.ui.navbar.separate') 
    flex 1
  padding 0 8px 0px $navbar-LR-padding
  display inline
#navbar div.sitetitle span
  vertical-align middle
  font-size 1.3em
  font-weight 600
#navbar div.sitetitle img
  height 40px
  vertical-align middle
  margin-right 8px

// 大标题
div.header_info
  height 100%
  position relative

@media screen and (min-width: $max-width){
  .header[header="home"] div.header_info{
    width $header-min-width
    margin auto
  }
}

@media screen and (max-width: $max-width){
  .header[header="home"] div.header_info{
    margin auto auto auto 100px
  }
  .header[header="page"] div.header_info,
  .header[header="post"] div.header_info{
    margin auto 100px
  }
}

div.header_info div.site_big_title
  position relative
  top 40%
  width max-content

div.header[header="page"] div.header_info div.site_big_title
  position relative
  padding 14rem 0
  width max-content

div.header_info div.site_big_title span.title
  font-size 6rem
  font-weight bold
  color #fffe
  text-shadow: 0 0 1.5rem #000d
div.header_info div.site_big_title span.subtitle
  font-size 2rem
  color #fffe
  text-shadow: 0 0 0.5rem #000d

div.header_info div.post_info
  position absolute
  top calc(50% + 30px)
  width 100%
  text-align center
div.header_info div.post_info span.post_title
  font-size 2rem
  font-weight bold
  color #fffe
  text-shadow: 0 0 1.5rem #000d
div.header_info div.post_info a
div.header_info div.post_info i
div.header_info div.post_info time
div.header_info div.post_info span
  color #fffe
  text-shadow: 0 0 1.5rem #000d