#navbar
  backdrop-filter: saturate(180%) blur(20px)
  position: fixed
  top: 0
  padding: 20px 0
  width: 100%
#menu-items
  box-sizing: border-box;
  width: 100%
  padding: 0 36px
  text-align: right
#menu-items a
  padding: 0 16px
  text-decoration: none
  color: var(--text-color)
  text-shadow: 0px 0px 5px var(--shadow-color)

