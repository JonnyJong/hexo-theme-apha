.main_column.page
  margin-top $block-margin
  article
    padding $block-padding
  main:hover
    box-shadow var(--b-shadow)
  main
    background-color var(--bg-color)
    box-shadow var(--b-shadow-lite)
    if hexo-config('global-blur') != 0
      backdrop-filter: saturate(180%) blur($global-blur)
    border-radius $border-radius
    transition .2s
    .page_info
      width 100%
      height max-content
      border-radius $border-radius $border-radius 0 0
      display flex
      align-items flex-end
      .inner_info
        width 100%
        .page_title
          margin 0
          display inline-block
          text-shadow var(--b-shadow-lite)
        .marginR
          margin-right 8px
        .other_info
          margin-top 20px
    .page_info[cover="true"]
      min-height 320px
      .inner_info
        padding 40px
        color #eee
        if hexo-config('page.incard_info_bg') == 'block'
          $info-oncover-opacity = hexo-config('page.incard_info_bg_block.opacity') ? convert(hexo-config('page.incard_info_bg_block.opacity')) : .6
          $info-oncover-blur = hexo-config('page.incard_info_bg_block.blur') ? convert(hexo-config('page.incard_info_bg_block.blur')) : 10px
          background rgba(0,0,0,$info-oncover-opacity)
          if hexo-config('page.incard_info_bg_block.blur') != 0
            backdrop-filter: saturate(180%) blur($info-oncover-blur)
        else if hexo-config('page.incard_info_bg') == 'gradient'
          $info-begin-color = hexo-config('page.incard_info_bg_gradient.begin_color') ? convert(hexo-config('page.incard_info_bg_gradient.begin_color')) : #0000
          $info-end-color = hexo-config('page.incard_info_bg_gradient.end_color') ? convert(hexo-config('page.incard_info_bg_gradient.end_color')) : #000f
          background-image linear-gradient($info-begin-color, $info-end-color)
        a
          color #eee
          transition .2s
        a:hover
          color var(--main-color)
    .page_info[cover="false"]
      color var(--text-color-r)
      .inner_info
        padding 40px 40px 0 40px
        a
          color var(--text-color-r)
          transition .2s
        a:hover
          color var(--main-color)
          i
            animation link_icon .5s

//增强标题可读性
h1
  font-size 30px
h2
  font-size 26px
h3
  font-size 23px
h4
  font-size 20px
h5
  font-size 18px
h6
  font-size 18px
#alt-h1,#alt-h2,#alt-h3,#alt-h4,#alt-h5,#alt-h6
  text-decoration underline dotted
article
  if hexo-config('page.paragraph_title_readability')
    h1:before
      content:"H1"
      font-size:25px
    h2:before
      content:"H2"
      font-size:23px
    h3:before
      content:"H3"
      font-size:21px
    h4:before
      content:"H4"
      font-size:18px
    h5:before
      content:"H5"
      font-size:16px
    h6:before
      content:"H6"
      font-size:16px
  h1:before
  h2:before
  h3:before
  h4:before
  h5:before
  h6:before
    // margin-right 0.5rem
    color var(--main-color)
    text-decoration none
  h6
    margin 32px 0
  
  // 行高
  p
    line-height 20px
    margin 6px 0

  // 当鼠标移动到链接上时
  a:hover
    text-decoration underline
    text-decoration-thickness 2px

  // 代码块
  figure.highlight
    margin 14px 0
    background #1e1e1e
    color #dcdcdc
    line-height 18px
    figcaption
      background #333
      span
        display inline-block
        padding 8px
      i
        padding 10px
        float right
        transition .1s
        width 14px
        text-align center
        cursor pointer
      i:hover
        background #0004
      i:active
        background #0008
    table
      width 100%
      if !(hexo-config('page.line_number') && hexo-config('page.sticky_line_number'))
        overflow auto
      display block
      box-shadow inset 0 4px 4px #000b
    if hexo-config('page.line_number') && hexo-config('page.sticky_line_number')
      tbody
        display block
        tr
          display flex
          width 100%
          position relative
          .gutter
            display inline-block
          td.code
            display inline-block
            overflow auto
            padding-bottom 8px
    pre
      margin 0
      font-family: "Ubuntu Mono", "Noto Sans SC", "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
    if hexo-config('page.line_number')
      .gutter
        text-align right
        min-width 3ch
        span
          margin-right 1ch
    else
      .gutter
        display none
    td.code
      width 100%
      .line
        if hexo-config('page.auto_warp')
          white-space normal
          word-break break-word
        margin-right 16px
      pre
        min-width 100%
      .keyword
      .literal
      .name
      .symbol
        color #569cd6

      .link
        color #569cd6
        text-decoration underline

      .built_in
      .type
        color #4ec9b0

      .class
      .number
        color #b8d7a3

      .meta .string
      .string
        color #d69d85

      .regexp
      .template-tag
        color #9a5334

      .formula
      .function
      .params
      .subst
      .title
        color #dcdcdc

      .comment
      .quote
        color #57a64a
        font-style italic

      .doctag
        color #608b4e

      .meta
      .meta .keyword
      .tag
        color #9b9b9b

      .template-variable
      .variable
        color #bd63c5

      .attr
      .attribute
        color #9cdcfe

      .section
        color gold

      .emphasis
        font-style italic

      .strong
        font-weight 700

      .bullet
      .selector-attr
      .selector-class
      .selector-id
      .selector-pseudo
      .selector-tag
        color #d7ba7d

      .addition
        background-color #0f04
        display inline-block
        width calc(100% - 16px)

      .deletion
        background-color #f004
        display inline-block
        width calc(100% - 16px)
  
  pre code
    overflow auto
    display block
    margin 14px 0
    background #1e1e1e
    color #dcdcdc
    line-height 18px
    font-family: "Ubuntu Mono", "Noto Sans SC", "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  
  // 黑幕
  psw
    text-decoration line-through 100%
    transition .1s
    white-space pre-wrap
  psw:hover
    text-decoration line-through 100% #0000

  // 按钮
  kbd
    border-radius 4px
    background linear-gradient(145deg, #fff, #d6d6d6)
    border solid 2px #8888
    font-family "Ubuntu Mono", "Noto Sans SC", "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
    padding 4px
    margin 0 4px
    font-size 14px

  // 图片
  img
    max-width 100%
    margin 4px auto 4px
    display block

  // 图片描述
  .img_des
    text-align center
    color var(--text-color-rf)
  
  // 引用块
  blockquote
    p
      font-style italic
    p:before
      content '\f10d'
      font-family "Font Awesome 5 Free"
      font-weight 900
      position absolute
      transform translateX(-34px) translateY(-10px)
      font-size 32px
      color #8888
      font-style normal
    footer
      position relative
      text-align right
      background-color #0000
      height auto
      width auto
      padding 0
      cite
        margin 8px
  // 文章图册
  .post_gallery
    position relative
    width 100%
    columns 200px auto
    column-gap 8px
    img
      margin 8px 0
    img:first-child
      margin-top 0

  // 插件标签
  // 提示块
  .blocktip
    --obj-main var(--text-color-r)
    --obj-bg #fff3
    display flex
    width 100%
    background var(--obj-bg)
    border-left solid 6px var(--obj-main)
    align-items center
    box-shadow var(--b-shadow-lite)
    margin-block-start 14px
    margin-block-end 14px
    if hexo-config('page.blocktip_radius')
      border-radius convert(hexo-config('page.blocktip_radius'))
  .blocktip>i
    padding 12px 0 12px 14px
    color var(--obj-main)
  .blocktip>.content
    flex 1
    padding 0 14px
    overflow auto
  // 进度条
  .progress
    --obj-bg #8883
    --obj-main #888
    background var(--obj-bg)
    border-radius $border-radius
    margin-block-start 14px
    margin-block-end 14px
    .inside
      height max-content
      border-radius $border-radius
      background var(--obj-main)
      color var(--text-color-r)
      text-align right
      padding 1px 0
      white-space nowrap
    .inside>*
      margin 6px 10px
  // 单选与复选
  .check
  .radio
    display flex
    align-items center
    --obj-main var(--text-color-r)
    input
      appearance none
      border 2px solid var(--obj-main)
      height 16px
      width 16px
      margin 4px
    input[type="radio"]
      border-radius 14px
    input[type="radio"]:checked:before
      content ""
      display block
      background var(--obj-main)
      height 8px
      width 8px
      border-radius 8px
      margin 2px 0 0 2px
    input[type="checkbox"]
      border-radius 2px
    input[type="checkbox"]:checked
      background var(--obj-main)
    input[type="checkbox"]:checked:before
    input[type="checkbox"]:checked:after
      content ""
      display block
      background #eee
  .check.o input:checked:before
    height 10px
    width 10px
    border-radius 10px
    margin 1px 0 0 1px
  .check.v input:checked:before
    height 3px
    width 12px
    border-radius 3px
    transform rotate(-45deg) translateY(5px) translateX(-2px)
  .check.v input:checked:after
    height 3px
    width 7px
    border-radius 3px
    transform rotate(45deg) translateY(3px) translateX(2px)
  .check.m input:checked:before
  .check.p input:checked:before
    height 3px
    width 12px
    border-radius 3px
    transform translateY(4.5px)
  .check.p input:checked:after
    height 12px
    width 3px
    border-radius 3px
    transform translateX(4.5px) translateY(-3px)
  .check.x input:checked:before
  .check.x input:checked:after
    height 3px
    width 14px
    border-radius 3px
    transform translateY(4.5px) translateX(-1px) rotate(45deg)
  .check.x input:checked:after
    transform translateY(1.5px) translateX(-1px) rotate(-45deg)
  // 更好看的链接
  .t_link
    display flex
    max-width calc(100% - 32px)
    width max-content
    height max-content
    max-width 80%
    min-width 280px
    min-height 40px
    background var(--bg-color)
    margin 16px auto
    padding 16px
    border-radius $border-radius
    color var(--text-color-r)
    align-items center
    justify-content space-evenly
    gap 8px
    box-shadow var(--b-shadow-lite)
    transition .2s ease-in-out
    overflow hidden
    img
      width 60px
      margin 0
    .info
      display flex
      align-items center
      flex-direction column
      gap 8px
      .i_title
        font-size 16px
        font-weight bold
  .t_link:hover
    text-decoration none
    box-shadow var(--b-shadow-m)
  // 彩色字
  .colorful
    padding 4px
    border-radius 4px
    background var(--obj-main)
    line-height 2
    white-space pre-wrap
    max-width 100%
  .colorful.right
  .colorful.center
    width max-content
    display block
  .colorful.right
    margin-left auto
  .colorful.center
    margin 4px auto
  // 时间线
  .timeline
    margin 16px 0
    .title
      font-size 20px
      margin-bottom 8px
      font-weight bold
    .nodes
      display flex
      flex-direction column
      padding-left 8px
      margin-left 16px
      border-left 4px solid var(--main-color)
      position relative
      padding-bottom 8px
    .timenode
      padding 8px
      position relative
      max-width 100%
      width max-content
    .timenode:after
      content ''
      display block
      position absolute
      height 8px
      width 8px
      border 4px solid var(--main-color)
      border-radius 8px
      background #fff
      top 8px
      left -18px
    .content
      background var(--main-color-bgh)
      border-radius $border-radius
      padding 8px 16px
    .nodetitle
      margin-bottom 8px
      line-height 1
      font-size 16px
      font-weight bold
  .timeline.row
    .nodes
      flex-direction row
      padding-left 0
      margin-left 0
      border-left none
      padding-top 24px
      width 100%
      overflow auto
      overflow overlay
    .timenode:before
      content ""
      position absolute
      display block
      background var(--main-color)
      height 4px
      width 100%
      transform translate(0, -20px)
    .timenode
      flex-shrink 0
      max-width calc(100% - 48px)
    .timenode:after
      top -18px
      left 12px
    .content
      max-height calc(100vh - 200px)
      overflow auto
      overflow overlay
      @media screen and (min-height: 600px)
        max-height 400px
  // 折叠块
  .fold
    border 1px solid var(--text-color-ro)
  .fold>.head
    background var(--bg-color)
    padding 10px8px
    cursor pointer
    i
      height 15px
      width 15px
      margin 0 4px 0 2px
      transition .1s
    i
    .title
      font-size 15px
  .fold>.content
    padding 16px
    background #8881
    display none
  .fold.un>.head i
    transform rotate(90deg)
  .fold.un>.content
    display block
  // 标签块
  .tabs
    border 1px solid var(--text-color-ro)
    background #8881
    --obj-main var(--main-color)
    .nav
      display flex
      overflow auto
      overflow overlay
      .tab
        flex-shrink 0
        width max-content
        min-width 50px
        height 22px
        padding 12px 10px 12px 10px
        line-height 22px
        border 1px solid var(--text-color-ro)
        border-bottom 0
        cursor pointer
        transition .1s
        text-align center
        position relative
        i
          margin-right 4px
      .tab:hover
        background #8882
      .tab:first-child
        border-left 0
      .tab.active
        background var(--bg-color)
        border-bottom 1px solid #0000
      .tab:after
        content ''
        display block
        position absolute
        width 100%
        height 0
        top 0
        background var(--obj-main)
        transition .1s
        left 0
      .tab:hover:after
        height 2px
      .tab.active:after
        height 4px
    .content
      background var(--bg-color)
      padding 16px
      display none
    .content.active
      display block

  // 插件基本颜色
  .red
    --obj-main #ff2525
    --obj-bg #ff252533
  .orange
    --obj-main #ff9225
    --obj-bg #ff922533
  .yellow
    --obj-main #f6f822
    --obj-bg #f6f82233
  .green
    --obj-main #23da23
    --obj-bg #23da2333
  .cyan
    --obj-main #24b5b5
    --obj-bg #24b5b533
  .blue
    --obj-main #2e64c3
    --obj-bg #2e64c333
  .purple
    --obj-main #b923ff
    --obj-bg #b923ff33
[prefers-color-scheme="dark"]
  article
    kbd
      background linear-gradient(145deg, #333, #000)
    .red
      --obj-main #da1515
    .orange
      --obj-main #f04e18
    .yellow
      --obj-main #b2b81b
    .green
      --obj-main #119511
    .cyan
      --obj-main #136d6d
    .blue
      --obj-main #1d3f8f
    .purple
      --obj-main #4e1ca0
    .t_link
      box-shadow var(--b-light-lite)
    .t_link:hover
      box-shadow var(--b-light-m)

// 表格
article>table
  max-width 100%
  thead tr
    background-color #8884
  thead tr th
    padding 8px
    line-height 1.2
  tbody
    background-color #8882
    tr td
      padding 4px 8px
    tr:nth-child(even)
      background-color #8882

// 高亮
table code
p code
  font-family "Ubuntu Mono", "Noto Sans SC", "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  background-color #f001
  color #f44
  line-height 1
  padding 3px 0

