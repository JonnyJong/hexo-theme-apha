  margin-top 16px
  padding $block-padding
  padding-bottom $block-padding - 8
  border solid 4px var(--main-color-bgh)
  background var(--bg-color)
  border-radius $border-radius
  .post_title
    font-size 23px
    font-weight bold
  .post_title
  .post_link
  .copyright
    margin-bottom 8px
    display block
    max-width max-content
  .other_info
    .info
      display inline-block
      margin 0 8px 8px 0