.main_column.page
  margin-top $block-margin
  article
    padding $block-padding
  main:hover
    box-shadow var(--b-shadow)
  main
    background-color var(--bg-color)
    box-shadow var(--b-shadow-lite)
    if hexo-config('global-blur') != 0
      backdrop-filter: saturate(180%) blur($global-blur)
    border-radius $border-radius
    transition .2s
    .page_info
      width 100%
      height max-content
      border-radius $border-radius $border-radius 0 0
      display flex
      align-items flex-end
      .inner_info
        width 100%
        .page_title
          margin 0
          display inline-block
          text-shadow var(--b-shadow-lite)
        .marginR
          margin-right 8px
        .other_info
          margin-top 20px
    .page_info[cover="true"]
      min-height 320px
      .inner_info
        padding 40px
        color #eee
        if hexo-config('page.incard_info_bg') == 'block'
          $info-oncover-opacity = hexo-config('page.incard_info_bg_block.opacity') ? convert(hexo-config('page.incard_info_bg_block.opacity')) : .6
          $info-oncover-blur = hexo-config('page.incard_info_bg_block.blur') ? convert(hexo-config('page.incard_info_bg_block.blur')) : 10px
          background rgba(0,0,0,$info-oncover-opacity)
          if hexo-config('page.incard_info_bg_block.blur') != 0
            backdrop-filter: saturate(180%) blur($info-oncover-blur)
        else if hexo-config('page.incard_info_bg') == 'gradient'
          $info-begin-color = hexo-config('page.incard_info_bg_gradient.begin_color') ? convert(hexo-config('page.incard_info_bg_gradient.begin_color')) : #0000
          $info-end-color = hexo-config('page.incard_info_bg_gradient.end_color') ? convert(hexo-config('page.incard_info_bg_gradient.end_color')) : #000f
          background-image linear-gradient($info-begin-color, $info-end-color)
        a
          color #eee
          transition .2s
        a:hover
          color var(--main-color)
    .page_info[cover="false"]
      color var(--text-color-r)
      .inner_info
        padding 40px 40px 0 40px
        a
          color var(--text-color-r)
          transition .2s
        a:hover
          color var(--main-color)
          i
            animation link_icon .5s

//增强标题可读性
h1
  font-size 30px
h2
  font-size 26px
h3
  font-size 23px
h4
  font-size 20px
h5
  font-size 18px
h6
  font-size 18px
#alt-h1,#alt-h2,#alt-h3,#alt-h4,#alt-h5,#alt-h6
  text-decoration underline dotted
article
  if hexo-config('page.paragraph_title_readability')
    h1:before
      content:"H1"
      font-size:25px
    h2:before
      content:"H2"
      font-size:23px
    h3:before
      content:"H3"
      font-size:21px
    h4:before
      content:"H4"
      font-size:18px
    h5:before
      content:"H5"
      font-size:16px
    h6:before
      content:"H6"
      font-size:16px
  h1:before
  h2:before
  h3:before
  h4:before
  h5:before
  h6:before
    // margin-right 0.5rem
    color var(--main-color)
    text-decoration none
  h6
    margin 32px 0
  
  // 行高
  p
    line-height 20px

  // 当鼠标移动到链接上时
  a:hover
    text-decoration underline
    text-decoration-thickness 2px

  // 代码块
  figure.highlight
    margin 14px 0
    background #1e1e1e
    color #dcdcdc
    line-height 18px
    figcaption
      background #333
      span
        display inline-block
        padding 8px
      i
        padding 10px
        float right
        transition .1s
        width 14px
        text-align center
        cursor pointer
      i:hover
        background #0004
      i:active
        background #0008
    table
      width 100%
      if !(hexo-config('page.line_number') && hexo-config('page.sticky_line_number'))
        overflow auto
      display block
      box-shadow inset 0 4px 4px #000b
    if hexo-config('page.line_number') && hexo-config('page.sticky_line_number')
      tbody
        display block
        tr
          display flex
          width 100%
          position relative
          .gutter
            display inline-block
          td.code
            display inline-block
            overflow auto
            padding-bottom 8px
    pre
      margin 0
      font-family: UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
    if hexo-config('page.line_number')
      .gutter
        text-align right
        min-width 3ch
        span
          margin-right 1ch
    else
      .gutter
        display none
    td.code
      .line
        if hexo-config('page.auto_warp')
          white-space normal
          word-break break-word
        margin-right 16px
      pre
        min-width 100%
      .keyword
      .literal
      .name
      .symbol
        color #569cd6

      .link
        color #569cd6
        text-decoration underline

      .built_in
      .type
        color #4ec9b0

      .class
      .number
        color #b8d7a3

      .meta .string
      .string
        color #d69d85

      .regexp
      .template-tag
        color #9a5334

      .formula
      .function
      .params
      .subst
      .title
        color #dcdcdc

      .comment
      .quote
        color #57a64a
        font-style italic

      .doctag
        color #608b4e

      .meta
      .meta .keyword
      .tag
        color #9b9b9b

      .template-variable
      .variable
        color #bd63c5

      .attr
      .attribute
        color #9cdcfe

      .section
        color gold

      .emphasis
        font-style italic

      .strong
        font-weight 700

      .bullet
      .selector-attr
      .selector-class
      .selector-id
      .selector-pseudo
      .selector-tag
        color #d7ba7d

      .addition
        background-color #0f04
        display inline-block
        width 100%

      .deletion
        background-color #f004
        display inline-block
        width 100%
  
  pre code
    overflow auto
    display block
    margin 14px 0
    background #1e1e1e
    color #dcdcdc
    line-height 18px
    font-family: UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  
  // 黑幕
  psw
    text-decoration line-through 100%
    transition .1s
  psw:hover
    text-decoration line-through 100% #0000

  // 按钮
  kbd
    border-radius: 4px;
    background: linear-gradient(145deg, #ffffff, #d6d6d6);
    border solid 2px #0008
    font-family UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
    padding 4px
    margin 0 4px
    font-size 14px

  // 图片
  img
    max-width 100%
    margin 4px auto 4px
    display block

  // 图片描述
  .img_des
    text-align center
    color var(--text-color-rf)
  
  // 引用块
  blockquote
    p
      font-style italic
    p:before
      content '\f10d'
      font-family "Font Awesome 5 Free"
      font-weight 900
      position absolute
      transform translateX(-34px) translateY(-10px)
      font-size 32px
      color #8888
      font-style normal
    footer
      position relative
      text-align right
      background-color #0000
      height auto
      width auto
      padding 0
      cite
        margin 8px
  // 文章图册
  .post_gallery
    position relative
    width 100%
    columns 200px auto
    column-gap 8px
    img
      margin 8px 0
    img:first-child
      margin-top 0

// 表格
article>table
  width 100%
article>table thead tr
  background-color #8884
article>table thead tr th
  padding 8px
article>table tbody
  background-color #8882
article>table tbody tr td
  padding 4px

// 高亮
article>table code
article>p code
  font-family UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  background-color #f001
  color #f44

// 版权信息
.post_copyright
  margin-top 16px
  padding $block-padding
  padding-bottom $block-padding - 8
  border solid 4px var(--main-color-bgh)
  background var(--bg-color)
  border-radius $border-radius
  .post_title
    font-size 23px
    font-weight bold
  .post_title
  .post_link
  .copyright
    margin-bottom 8px
    display block
    max-width max-content
  .other_info
    .info
      display inline-block
      margin 0 8px 8px 0