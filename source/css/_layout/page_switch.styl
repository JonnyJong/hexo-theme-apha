nav.page_switch
  margin-top $block-margin
  width 100%

div.page_switch .extend,
div.page_switch .page-number
  display inline-block
  height 26px
  width 26px
  color var(--text-color-r)
  background-color var(--bg-color)
  margin-right $block-margin
  line-height 26px
  text-align center
  overflow hidden
  border-radius $border-radius
  transition all 0.1s

div.page_switch .extend:hover,
div.page_switch .page-number:hover
  // background-color var(--main-color)
  box-shadow var(--b-shadow-lite)
  background-color var(--main-color-nbgh)

div.page_switch .page-number.current
  background-color var(--main-color)
  box-shadow var(--b-shadow)
div.page_switch .page-number.current:hover
  cursor default
  
div.page_switch .extend
  line-height 28px

// 文章页中
nav.page_switch div.prev-post.pull-left
nav.page_switch div.next-post.pull-right
  if hexo-config('custom.global-blur') != 0
    backdrop-filter: saturate(180%) blur($global-blur)
  --switch-page-in-post $block-margin / 2
  width calc(50% - var(--switch-page-in-post))
  border-radius $border-radius
  min-height 140px // 待更改
  transition all 0.5s
  overflow hidden
  position relative
  background var(--bg-color)
nav.page_switch div.prev-post.pull-left
  float left
nav.page_switch div.next-post.pull-right
  float right
nav.page_switch div.prev-post.pull-left:hover
nav.page_switch div.next-post.pull-right:hover
  box-shadow var(--b-shadow)
nav.page_switch div.prev-post.pull-left a
nav.page_switch div.next-post.pull-right a
  color var(--text-color-r)
  padding $block-padding
  box-sizing border-box
  position absolute
  width 100%
  text-shadow var(--b-shadow-lite)
  height 100%
nav.page_switch div.prev-post.pull-left a
  text-align right
