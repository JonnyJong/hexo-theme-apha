nav#page_switch
  margin-top $block-margin
  width 100%

div.page_switch .extend,
div.page_switch .page-number
  display inline-block
  height 1.6rem
  width 1.6rem
  color var(--global-text-color)
  background-color var(--global-background-color)
  margin-right $block-margin
  line-height 1.7 rem
  text-align center
  overflow hidden
  border-radius $border-radius
  transition all 0.1s

div.page_switch .extend:hover,
div.page_switch .page-number:hover
  background-color var(--main-color)
  box-shadow 0px 0px 1rem var(--shadow-color-deep)

div.page_switch .page-number.current
  cursor default
  background-color var(--main-color-fade)
  box-shadow 0px 0px 1rem var(--shadow-color)
  
div.page_switch .extend
  line-height 1.8rem

// 文章页中
nav#page_switch div.prev-post.pull-left
nav#page_switch div.next-post.pull-right
  background-color var(--global-background-color)
  if hexo-config('custom.global-blur') != 0
    backdrop-filter: saturate(180%) blur($global-blur)
  --switch-page-in-post $block-margin / 2
  width calc(50% - var(--switch-page-in-post))
  border-radius $border-radius
  min-height 140px // 待更改
  transition all 0.5s
  overflow hidden
  position relative
nav#page_switch div.prev-post.pull-left
  float left
nav#page_switch div.next-post.pull-right
  float right
nav#page_switch div.prev-post.pull-left:hover
nav#page_switch div.next-post.pull-right:hover
  box-shadow 0px 0px 1rem var(--shadow-color-deep)
nav#page_switch div.prev-post.pull-left a
nav#page_switch div.next-post.pull-right a
  color var(--global-text-color)
  padding $block-padding
  box-sizing border-box
  position absolute
  width 100%
  text-shadow 0px 0px 1rem var(--shadow-color)
nav#page_switch div.prev-post.pull-left span#post_title
nav#page_switch div.next-post.pull-right span#post_title
  font-size 1.4rem
  transition all 0.1s
nav#page_switch div.prev-post.pull-left:hover span#post_title
nav#page_switch div.next-post.pull-right:hover span#post_title
  color var(--main-color)
  font-size 1.6rem
  text-shadow 0px 0px 0.5rem var(--shadow-color)

nav#page_switch div.prev-post.pull-left a.img
nav#page_switch div.next-post.pull-right a.img
  min-height max-content
  height 140px
  padding 0px
  overflow hidden
  border-radius $border-radius
  z-index: -1
  opacity .8
nav#page_switch div.prev-post.pull-left img
nav#page_switch div.next-post.pull-right img
  height 100%
  width 100%
  object-fit cover
  transform none
  transition all 3s
nav#page_switch div.prev-post.pull-left:hover img
nav#page_switch div.next-post.pull-right:hover img
  transform scale(1.1)
  transition all 0.5s
  opacity .2