nav.page_switch div.prev-post.pull-left span.post_title
nav.page_switch div.next-post.pull-right span.post_title
  font-size 22px
  transition all 0.1s
nav.page_switch div.prev-post.pull-left:hover span.post_title
nav.page_switch div.next-post.pull-right:hover span.post_title
  color var(--main-color)
  font-size 26px
  text-shadow var(--b-shadow)

nav.page_switch div.prev-post.pull-left a.img
nav.page_switch div.next-post.pull-right a.img
  min-height max-content
  height 140px
  padding 0px
  overflow hidden
  border-radius $border-radius
  z-index: -1
  opacity .8
nav.page_switch div.prev-post.pull-left img
nav.page_switch div.next-post.pull-right img
  // height 
  // position absolute
  height 100%
  width 100%
  object-fit cover
  transform none
  transition all 3s
nav.page_switch div.prev-post.pull-left:hover img
nav.page_switch div.next-post.pull-right:hover img
  transform scale(1.1)
  transition all 0.5s
  opacity .2