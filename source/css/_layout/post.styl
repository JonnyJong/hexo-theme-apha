// 文章封面样式不为 banner 时生效（若有其他样式再做处理）
if hexo-config('custom.ui.post.cover_style') != 'banner'
  .main_column.page div.post_info
    position relative

  .main_column.page div.post_info div.post_cover
    width 100%
    height 320px
    overflow hidden
    border-radius $border-radius $border-radius 0 0
    position relative
    background-color var(--main-color)
  .main_column.page div.post_info[nocover="true"] div.post_cover
    background-color #0000
    height 0
  .main_column.page div.post_info div.post_cover img
    height 100%
    width 100%
    object-fit cover

  .main_column.page div.post_info div.post_info_oncover_positon_fix
    width 100%
    position absolute
    top 0px
  .main_column.page div.post_info[nocover="false"] div.post_info_oncover_positon_fix
    height 320px
  .main_column.page div.post_info[nocover="true"] div.post_info_oncover_positon_fix
    position relative
  .main_column.page div.post_info div.post_info_oncover
    position absolute
    padding $block-margin + $block-padding
    width 100%
    bottom 0px
    box-sizing border-box
    if hexo-config('custom.ui.post.incard_info_bg') == 'block'
      $info-oncover-opacity = hexo-config('custom.ui.post.incard_info_bg_block.opacity') ? convert(hexo-config('custom.ui.post.incard_info_bg_block.opacity')) : .2
      $info-oncover-blur = hexo-config('custom.ui.post.incard_info_bg_block.blur') ? convert(hexo-config('custom.ui.post.incard_info_bg_block.blur')) : 2px
      background rgba(0,0,0,$info-oncover-opacity)
      if hexo-config('custom.ui.post.incard_info_bg_block.blur') != 0
        backdrop-filter: saturate(180%) blur($info-oncover-blur)
    else if hexo-config('custom.ui.post.incard_info_bg') == 'gradient'
      $info-begin-color = hexo-config('custom.ui.post.incard_info_bg_gradient.begin_color') ? convert(hexo-config('custom.ui.post.incard_info_bg_gradient.begin_color')) : #0000
      $info-end-color = hexo-config('custom.ui.post.incard_info_bg_gradient.end_color') ? convert(hexo-config('custom.ui.post.incard_info_bg_gradient.end_color')) : #000f
      background-image linear-gradient($info-begin-color, $info-end-color)
  .main_column.page div.post_info[nocover="true"] div.post_info_oncover
    position relative
    background-image none
    background none
    backdrop-filter none
    padding $block-margin + $block-padding $block-margin + $block-padding 0px $block-margin + $block-padding
  .main_column.page div.post_info div.post_info_oncover span.post_title
    font-size 32px
    font-weight bold
    color var(--text-color)
    text-shadow: 0 0 24px #000d
  .main_column.page div.post_info[nocover="true"] div.post_info_oncover span.post_title
    color var(--text-color-r)
    text-shadow none
  .main_column.page div.post_info 
    div.post_info_oncover a
    div.post_info_oncover i
    div.post_info_oncover time
    div.post_info_oncover span
      color var(--text-color)
      text-shadow: 0 0 24px #000d
  .main_column.page div.post_info[nocover="true"]
    div.post_info_oncover a
    div.post_info_oncover i
    div.post_info_oncover time
    div.post_info_oncover span
      color var(--text-color-r)
      text-shadow none

// 文章内容
//增强标题可读性
h1
  font-size 30px
h2
  font-size 26px
h3
  font-size 23px
h4
  font-size 20px
h5
  font-size 18px
h6
  font-size 18px
#alt-h1,#alt-h2,#alt-h3,#alt-h4,#alt-h5,#alt-h6
  text-decoration underline dotted
article.page
  if hexo-config('custom.ui.post.paragraph_title_readability')
    h1:before
      content:"H1"
      font-size:25px
    h2:before
      content:"H2"
      font-size:23px
    h3:before
      content:"H3"
      font-size:21px
    h4:before
      content:"H4"
      font-size:18px
    h5:before
      content:"H5"
      font-size:16px
    h6:before
      content:"H6"
      font-size:16px
  h1:before
  h2:before
  h3:before
  h4:before
  h5:before
  h6:before
    // margin-right 0.5rem
    color var(--main-color)
    text-decoration none
  
  // 行高
  p
    line-height 20px

  // 当鼠标移动到链接上时
  a:hover
    text-decoration underline
    text-decoration-thickness 2px

  // 代码块
  figure.highlight figcaption
    background #1e1e1e
    color #ccc
    padding 8px 16px 0px 16px
  figure.highlight table
    border none
    border-spacing 0px
    width 100%
    display block
    overflow auto
  figure.highlight table::-webkit-scrollbar
    height 12px
    background #1e1e1e
    border 1px #3c3c3c
  figure.highlight:hover table::-webkit-scrollbar-thumb
    background #fff2
  figure.highlight table::-webkit-scrollbar-thumb:hover
    background #fff4
  figure.highlight span
    font-family UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
    font-size 14px
    font-weight lighter
  figure.highlight table tbody tr td.code
    color #d4d4d4
    background #1e1e1e
    padding 0px 4px
    // position relative
    overflow auto
    // box-sizing border-box
    // display block
    width 100%
  figure.highlight table tbody tr td.gutter
    color #858585
    background #1e1e1e
    padding 0px 4px
    text-align right
    width 3ch
  figure.highlight table tbody span.line
    line-height 16px

  // 按钮
  kbd
    border-radius: 4px;
    background: linear-gradient(145deg, #ffffff, #d6d6d6);
    box-shadow:  2px 2px 1px #626262ee,
                -2px -2px 1px #ffffffee;
    border solid 2px #0008
    font-family UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
    padding 4px
    margin 0 4px

  // 图片
  img
    max-width 100%
    margin 4px auto 4px
    display block

// 表格
article.page>table
  width 100%
article.page>table thead tr
  background-color #8884
article.page>table thead tr th
  padding 8px
article.page>table tbody
  background-color #8882
article.page>table tbody tr td
  padding 4px

// 高亮
article.page>table code
article.page>p code
  font-family UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  background-color #f001
  color #f44


