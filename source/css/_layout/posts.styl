.posts
  display flex
  flex-direction column
  gap $margin
  .post
    overflow hidden
    position relative
    border-radius $radius
    text-decoration none
    background var(--bg)
    backdrop-filter var(--backdrop)
    display flex
    if hexo-config("index_posts.style") == 2
      flex-direction column
    else if hexo-config("index_posts.style") == 3
      &.cover
        min-height hexo-config("index_posts.cover_min_height") ? convert(hexo-config("index_posts.cover_min_height")) : 200px
      &:hover .cover img
        opacity .3
        transform scale(1.02)
    else
      if hexo-config("index_posts.info_position") == 'left'
        flex-direction row-reverse
      else if hexo-config("index_posts.info_position") != 'right'
        &:nth-child(even)
          flex-direction row-reverse
    .cover
      if hexo-config("index_posts.style") == 2
        height hexo-config("index_posts.cover_min_height") ? convert(hexo-config("index_posts.cover_min_height")) : 200px
        position relative
      else if hexo-config("index_posts.style") == 3
        position absolute
        height 100%
        width 100%
        &:before
          content ''
          display block
          width 100%
          height 100%
          position absolute
          background linear-gradient(to right, var(--bg), #0000)
      else
        min-height hexo-config("index_posts.cover_min_height") ? convert(hexo-config("index_posts.cover_min_height")) : 200px
        width hexo-config("index_posts.cover_min_height") ? convert(hexo-config("index_posts.cover_min_height"))+100px : 300px
        position relative
      if hexo-config("index_posts.cover_padding")
        padding $padding
      overflow hidden
      flex 0 0 auto
      img
        height 100%
        width 100%
        object-fit cover
        transition .5s
        if hexo-config("index_posts.style") == 3
          position relative
          z-index -1
      if hexo-config("index_posts.style") != 3
        &:hover
          img
            transform scale(1.05)
    >.info
      padding 16px
      position relative
      display flex
      flex-direction column
      justify-content center
      padding $padding
      width 100%
      .title
        color var(--color-accent)
        text-decoration none
        if hexo-config("index_posts.title_align") == 'center'
          text-align center
        else if hexo-config("index_posts.title_align") == 'right'
          text-align right
        font-size 20px
        font-weight bold
        transition .1s
        &:hover
          color var(--color-hover)
        &:active
          color var(--color-active)
      .group
        display flex
        align-items center
      .sticky
      .date
      .updated
      .minutes
      .wordcount
        if hexo-config("index_posts.info_style") == 'chip'
          border-radius $radius
          padding 4px 8px
          background var(--bg)
          color var(--font-main)
          border 1px solid
          margin 2px
        else
          margin 2px
      .categories
        display flex
        flex-wrap wrap
        if hexo-config("index_posts.info_style") == 'chip'
          margin 0 2px
          .info
            border-radius $radius 0 0 $radius
            padding 4px 8px
            margin 2px 0
            background var(--bg)
            color var(--color-main)
            border 1px solid
            border-right 0
          .category
            padding 4px 8px
            margin 2px 0
            background var(--bg)
            color var(--color-accent)
            text-decoration none
            border-top 1px solid
            border-bottom 1px solid
            &:before
              content '/'
            &:last-child
              border-radius 0 $radius $radius 0
              border 1px solid
              border-left 0
            &:hover
              color var(--color-hover)
            &:active
              color var(--color-active)
        else
          .info
          .category
            padding 2px 0
          .category
            color var(--color-accent)
            &:before
              content '/'
            &:hover
              color var(--color-hover)
            &:active
              color var(--color-active)
      .tags
        display flex
        flex-wrap wrap
        if hexo-config("index_posts.info_style") == 'chip'
          .info
          .tag
            border-radius $radius
            padding 4px 8px
            background var(--bg)
            color var(--color-main)
            border 1px solid
            margin 2px
          .tag
            color var(--color-accent)
            transition .05s
            text-decoration none
            &:hover
              color var(--color-hover)
              text-decoration none
            &:active
              color var(--color-active)
        else
          .info
          .tag
            padding 2px 4px
          .tag
            color var(--color-accent)
            &:hover
              color var(--color-hover)
            &:active
              color var(--color-active)