div.recent-post-item
  display flex
  margin-top $block-margin
  height 20rem
  border-radius $border-radius
  if hexo-config('custom.global-blur') != 0
    backdrop-filter: saturate(180%) blur($global-blur)
  transition all 0.5s
  if hexo-config('custom.block-style') == 'soft'
    box-shadow $soft_block_style_shadow
    background $soft_block_style_bg
  else
    background var(--global-background-color)
div.recent-post-item:hover
  if hexo-config('custom.block-style') == 'soft'
    box-shadow $soft_block_style_shadow_hover
  else
    box-shadow $flat_block_style_shadow

div.recent-post-item div.post_cover.side
  height 100%
  width 30rem
  max-width 40%
  overflow hidden
  border-radius $border-radius 0 0 $border-radius //当前为仅为左侧

div.recent-post-item div.post_cover.side img
  height 100%
  width 100%
  object-fit cover
  transform none
  transition all 3s
div.recent-post-item:hover div.post_cover.side img
  transform scale(1.05)
div.recent-post-item div.post_cover.side img:hover
  transform scale(1.1)
  transition all 0.5s

div.recent-post-item div.post_info
  margin auto 0
  padding $block-padding
div.recent-post-item div.post_info a.post_title i.fa.fa-link.fa-tw
  font-size 1.4rem
  transition all 0.1s
div.recent-post-item div.post_info a.post_title
  font-size 1.8rem
  color var(--global-text-color)
  font-weight 600
  transition all 0.1s
div.recent-post-item div.post_info a.post_title:hover
  color var(--main-color)
  font-size 2rem
div.recent-post-item div.post_info a.post_title:hover i.fa.fa-link.fa-tw
  font-size 1.6rem

div.recent-post-item div.post_info p
  margin 0.4rem

div.recent-post-item div.post_info a
  color var(--global-text-color)
  transition all 0.1s
div.recent-post-item div.post_info a:hover
  color var(--main-color)

div.recent-post-item div.post_info span.post_description
  line-height 1.5rem
  // -webkit-line-clamp 6
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp 8
  overflow hidden