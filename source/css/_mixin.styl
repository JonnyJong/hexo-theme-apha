post-info()
  .group
    display flex
    flex-wrap wrap
    align-items center
    gap 8px
  if hexo-config("page.item_style") == 'chip'
    .sticky
    .date
    .updated
    .wordcount
    .minutes
    .tags i
    .categories .info
      color var(--font-main)
      padding 4px 8px
      border-radius $radius
      border 1px solid
      background var(--bg)
    .categories
      display flex
      flex-wrap wrap
      >*
        padding 4px 8px
        background var(--bg)
        border-top 1px solid
        border-bottom 1px solid
        &:first-child
          border-radius $radius 0 0 $radius
          border-right 0
        &:last-child
          border-radius 0 $radius $radius 0
          border-right 1px solid
      .category
        &:before
          content '/'
    .tags
      display flex
      flex-wrap wrap
      gap 8px
      align-items center
      .tag
        padding 4px 8px
        border-radius $radius
        border 1px solid
        background var(--bg)
  else
    .categories
      display flex
      flex-wrap wrap
      .category:before
        content '/'
    .tags
      display flex
      flex-wrap wrap
      gap 8px
      align-items center
  i
    margin 0 4px 0 0
    line-height 18px
  .title
    margin 0
    font-size 28px
  .sticky
    color #F44336