//不需要作为 css 变量写入 css 文件的变量
$max-width = hexo-config('custom.max-width') ? (convert(hexo-config('custom.max-width')) + 200px) : 1600px
$block-margin = hexo-config('custom.block-margin') ? convert(hexo-config('custom.block-margin')) : 1rem
$block-padding = hexo-config('custom.block-padding') ? convert(hexo-config('custom.block-padding')) : 1rem
$border-radius = hexo-config('custom.border-radius') ? convert(hexo-config('custom.border-radius')) : 1rem
$global-opacity = hexo-config('custom.global-opacity') ? convert(hexo-config('custom.global-opacity')) : .6
$global-blur = hexo-config('custom.global-blur') ? convert(hexo-config('custom.global-blur')) : 20px
$flat_block_style_shadow = 0px 0px 1rem var(--shadow-color-deep)
$soft_block_style_shadow_hover = inset 2rem 2rem 4rem #fff1, inset -2rem -2rem 4rem #0001, 0px 0px 1rem var(--shadow-color-deep)
$soft_block_style_shadow = inset 2rem 2rem 4rem #fff1, inset -2rem -2rem 4rem #0001
$soft_block_style_bg = linear-gradient(145deg, rgba(255,255,255,$global-opacity), rgba(200,200,200,$global-opacity))
$main_content_margin = (hexo-config("custom.min_margin") ? convert(hexo-config("custom.min_margin")) : 16px)
//header
$header-min-width = $max-width - 200px
$navbar-LR-padding = hexo-config('custom.ui.navbar.lr_distance') ? convert(hexo-config('custom.ui.navbar.lr_distance')) : 36px
$navbar-opacity = hexo-config('custom.ui.navbar.opacity') ? convert(hexo-config('custom.ui.navbar.opacity')) : .8
$navbar-blur = hexo-config('custom.ui.navbar.blur') ? convert(hexo-config('custom.ui.navbar.blur')) : 20px
//page and post
$soft_block_style_shadow_main_column = inset 2rem 2rem 4rem #fff1, inset -2rem -2rem 4rem #0001, 0px 0px 1rem var(--shadow-color)

//需处理的变量
$main_color = hexo-config('custom.theme_color.main') ? convert(hexo-config('custom.theme_color.main')) : #009688

:root
  --main-color hexo-config('custom.theme_color.main') ? convert(hexo-config('custom.theme_color.main')) : #009688
  --main-color-fade #009688ee
  --selection-text-color #eee

  --global-text-color #111
  --re-text-color #080808
  --shadow-color #0004
  --shadow-color-deep #0008

  --global-background-color rgba(255,255,255,$global-opacity)

  --global-font hexo-config('custom.font.font-family') ? convert(hexo-config('custom.font,font-family')) : UbuntuMono

  --post-bottom-margin $block-margin

  --bg-color #fff
  --bg-color-tran #fffd