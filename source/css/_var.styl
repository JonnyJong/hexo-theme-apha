$max-width = hexo-config('max-width') ? (convert(hexo-config('max-width')) + 200px) : 1600px // 页面主体最大宽度（实际使用 - 200px）
$block-margin = hexo-config('block-margin') ? convert(hexo-config('block-margin')) : 16px // 模块外边距
$block-padding = hexo-config('block-padding') ? convert(hexo-config('block-padding')) : 24px // 模块内边距
$border-radius = hexo-config('border-radius') ? convert(hexo-config('border-radius')) : 10px // 圆角
$global-opacity = hexo-config('global-opacity') ? convert(hexo-config('global-opacity')) : .6 // 不透明度
$global-blur = hexo-config('global-blur') ? convert(hexo-config('global-blur')) : 20px //模糊程度
$main_content_margin = (hexo-config("min_margin") ? convert(hexo-config("min_margin")) : 16px) //主体两侧最小边界
// header
$header-min-width = $max-width - 200px
$navbar-LR-padding = hexo-config('navbar.lr_distance') ? convert(hexo-config('navbar.lr_distance')) : 36px
$navbar-opacity = hexo-config('navbar.opacity') ? convert(hexo-config('navbar.opacity')) : .8
$navbar-blur = hexo-config('navbar.blur') ? convert(hexo-config('navbar.blur')) : 20px
$navbar_height = hexo-config('navbar.height') ? convert(hexo-config('navbar.height')) : 60px

$mbl_item_height = hexo-config('navbar.mbl_item_height') ? convert(hexo-config('navbar.mbl_item_height')) : 40px
$mbl_vertical_padding = hexo-config('navbar.mbl_vertical_padding') ? convert(hexo-config('navbar.mbl_vertical_padding')) : 10px
$mbl_horizontal_padding = hexo-config('navbar.mbl_horizontal_padding') ? convert(hexo-config('navbar.mbl_horizontal_padding')) : 8px

$index_big_title_font_size = hexo-config('index_big_title_font_size') ? convert(hexo-config('index_big_title_font_size')) : 96px // 主页大标题字体大小基数
$index_subtitle_font_size = hexo-config('index_subtitle_font_size') ? convert(hexo-config('index_subtitle_font_size')) : 24px // 主页副标题字体大小基数

// 色调
$main_color = hexo-config('theme_color.black_and_white') ? #000 : (hexo-config('theme_color.main') ? convert(hexo-config('theme_color.main')) : #009688)

:root
  //主要色调
  --main-color $main_color
  --main-color-bgh alpha($main_color 25%)
  --main-color-nbgh saturation(lightness($main_color 60%) 50%)
  // 字体颜色
  --text-color #eee
  --text-color-r #111
  --text-color-rf #555
  --text-color-ro #5554
  // 背景颜色
  --body-color #eee
  --bg-color rgba(255, 255, 255, $global-opacity)

  // 阴影
  --b-shadow-lite 0px 0px 8px #0004
  --b-shadow-m 0px 0px 12px #0008
  --b-shadow 0px 0px 16px #0008
  --b-light-lite 0px 0px 8px #fff4
  --b-light-m 0px 0px 8px #fff8

  // 需要即时计算的变量
  --main_content_margin $main_content_margin

[prefers-color-scheme="dark"]
  // 主要色调
  --main-color-nbgh saturation(lightness($main_color 30%) 50%)
  // 字体颜色
  --text-color #111
  --text-color-r #ededed
  --text-color-rf #aaa
  --text-color-ro #aaa4
  // 背景颜色
  --body-color #111
  --bg-color rgba(10, 10, 10, $global-opacity)