$max-width = hexo-config('custom.max-width') ? (convert(hexo-config('custom.max-width')) + 200px) : 1600px // 页面主体最大宽度（实际使用 - 200px）
$block-margin = hexo-config('custom.block-margin') ? convert(hexo-config('custom.block-margin')) : 16px // 模块外边距
$block-padding = hexo-config('custom.block-padding') ? convert(hexo-config('custom.block-padding')) : 16px // 模块内边距
$border-radius = hexo-config('custom.border-radius') ? convert(hexo-config('custom.border-radius')) : 16px // 圆角
$global-opacity = hexo-config('custom.global-opacity') ? convert(hexo-config('custom.global-opacity')) : .6 // 不透明度
$global-blur = hexo-config('custom.global-blur') ? convert(hexo-config('custom.global-blur')) : 20px //模糊程度
$main_content_margin = (hexo-config("custom.min_margin") ? convert(hexo-config("custom.min_margin")) : 16px) //主体两侧最小边界
//header
$header-min-width = $max-width - 200px
$navbar-LR-padding = hexo-config('custom.ui.navbar.lr_distance') ? convert(hexo-config('custom.ui.navbar.lr_distance')) : 36px
$navbar-opacity = hexo-config('custom.ui.navbar.opacity') ? convert(hexo-config('custom.ui.navbar.opacity')) : .8
$navbar-blur = hexo-config('custom.ui.navbar.blur') ? convert(hexo-config('custom.ui.navbar.blur')) : 20px

//需处理的变量
// 色彩预备
$color_hue = hexo-config('custom.theme_color.hue') ? hexo-config('custom.theme_color.hue') : false
$color_ori_main = hexo-config('custom.theme_color.main') ? convert(hexo-config('custom.theme_color.main')) : #009688
$main_color = $color_hue ? hsl($color_hue, 100%, 50%) : $color_ori_main

:root
  //主要色调
  --main-color $main_color
  --main-color-bgh alpha($main_color 25%)
  --main-color-nbgh saturation(lightness($main_color 60%) 50%)
  // 字体颜色
  --text-color #eee
  --text-color-r #111
  // 背景颜色
  --body-color #fff
  --bg-color rgba(255, 255, 255, $global-opacity)

  // 阴影
  --b-shadow-lite 0px 0px 8px #0004
  --b-shadow 0px 0px 16px #0008