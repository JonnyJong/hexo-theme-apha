@font-face {
  font-family: UbuntuMono
  src:url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.woff2') format('woff2'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.eot'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.eot?#iefix') format('embedded-opentype'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.woff') format('woff'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.otf') format('opentype');
}

:root
  font-family: UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  // 用于修复页面加载瞬间的排版错乱
  font-size: 16px

// 自定义背景
body
  min-height calc(100vh - 8rem)
  padding-bottom 8rem
  margin 0
  position relative
  background hexo-config("custom.background.background") ? convert(hexo-config("custom.background.background")) : var(--bg-color)
if hexo-config("custom.background.style") == 'blur'
  body::after
    background-image hexo-config("custom.background.blur.img") ? convert(hexo-config("custom.background.blur.img")) : none
    $bg_style_blur_filter = hexo-config("custom.background.blur.blur") ? convert(hexo-config("custom.background.blur.blur")) : 20px
    filter saturate(180%) blur($bg_style_blur_filter)
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index -1
    if hexo-config("custom.background.blur.scroll")
      background-attachment scroll
    else
      background-attachment fixed
    opacity hexo-config("custom.background.blur.opacity") ? convert(hexo-config("custom.background.blur.opacity")) : 30%
    background-position center center
else if hexo-config("custom.background.style") == 'bg_img'
  body
    background-image hexo-config("custom.background.bg_img") ? convert(hexo-config("custom.background.bg_img")) : none

@import '_var'
@import "_layout/*"

// 自定义背景

// 页面主要部分的自适应
@media screen and (min-width: $max-width - 200px + ($main_content_margin*2)){
  div#content-inner{
    width $header-min-width
  }
}

a
  // 清除所有 a 标签下划线
  text-decoration none
  // 自定义链接颜色
  color var(--main-color)

// 选中颜色
::selection
  background var(--main-color)
  color var(--selection-text-color)

// 页面主要部分与上方间隔
#content-inner
  padding $block-margin $main_content_margin
  margin auto
body[where='page'] #content-inner
body[where='post'] #content-inner
  if (hexo-config('custom.ui.post.cover_style') != 'banner') && hexo-config('custom.ui.navbar.bottom') == 'none'
    padding-top (hexo-config('custom.ui.navbar.height') ? convert(hexo-config('custom.ui.navbar.height')) : 60px)+(hexo-config('custom.ui.navbar.top') != 'none' ? convert(hexo-config('custom.ui.navbar.top')) : 0px)
body[where='post'] #content-inner
  padding-bottom calc(var(--post-bottom-margin) + 140px)

// hr
hr
  border-top 4px dashed var(--main-color)

// 滚动条
::-webkit-scrollbar
  // background #8881
  height 14px
  width 14px
::-webkit-scrollbar-thumb
  background #0002
::-webkit-scrollbar-thumb:hover
  background #0004
