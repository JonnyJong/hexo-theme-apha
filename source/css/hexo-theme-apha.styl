@font-face {
  font-family: UbuntuMono
  src:url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.woff2') format('woff2'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.eot'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.eot?#iefix') format('embedded-opentype'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.woff') format('woff'),
  url('https://cdn.jsdelivr.net/gh/JonnyJong/blogStaticResource@main/fonts/UbuntuMono-R.otf') format('opentype');
  font-display swap
}

:root
  font-family: UbuntuMono, "PingFang SC", "Microsoft YaHei", Arial, Monaco, monospace, sans-serif
  // 用于修复页面加载瞬间的排版错乱
  font-size: 16px

// 自定义背景
body
  min-height calc(100vh - 128px)
  padding-bottom 128px
  margin 0
  position relative
  background hexo-config("custom.background.background") ? convert(hexo-config("custom.background.background")) : var(--body-color)
if hexo-config("custom.background.style") == 'blur'
  body::after
    background-image hexo-config("custom.background.blur.img") ? convert(hexo-config("custom.background.blur.img")) : none
    $bg_style_blur_filter = hexo-config("custom.background.blur.blur") ? convert(hexo-config("custom.background.blur.blur")) : 20px
    filter saturate(180%) blur($bg_style_blur_filter)
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index -1
    if hexo-config("custom.background.blur.scroll")
      background-attachment scroll
    else
      background-attachment fixed
    opacity hexo-config("custom.background.blur.opacity") ? convert(hexo-config("custom.background.blur.opacity")) : 30%
    background-position center center
else if hexo-config("custom.background.style") == 'bg_img'
  body
    background-image hexo-config("custom.background.bg_img") ? convert(hexo-config("custom.background.bg_img")) : none

@import '_var'
@import '_animation'
@import "_layout/*"

a
  // 清除所有 a 标签下划线
  text-decoration none
  // 自定义链接颜色
  color var(--main-color)

// 选中颜色
::selection
  background var(--main-color)
  color var(--text-color)
#content-outer
  margin-bottom $block-margin
#content-inner
  margin auto
  // 与侧栏布局
  display flex
  flex-direction row
  gap $block-margin
  transition 1s
.main_column
  --width_main_column $main_content_margin*2 + 300px + $block-margin
  max-width $max-width - $block-margin*2 - 500px
  width calc(100vw - var(--width_main_column))
.side_column
  width 300px

// 页面主要部分与上方间隔
[where="page"]
[where="post"]
  #content-inner
    padding $navbar_height $main_content_margin $block-margin $main_content_margin
[where="home"] #content-inner
  padding 0 $main_content_margin $block-margin $main_content_margin
// hr
hr
  border-top 4px dashed var(--main-color)

// 滚动条
::-webkit-scrollbar
  // background #8881
  height 8px
  width 8px
::-webkit-scrollbar-thumb
  background alpha($main_color 60%)
  border-radius $border-radius
::-webkit-scrollbar-track
  background var(--main-color-bgh)
::-webkit-scrollbar-thumb:hover
  background var(--main-color)

// 换行（全局可用）
.line_warp_h
  display block
  height 4px

// 自适应
@media screen and (min-width: $max-width - 200px +($main_content_margin*3))
  div#content-inner
    width $header-min-width
@media screen and (max-width: 1000px)
  .main_column
    --width_main_column $main_content_margin*2 + 240px + $block-margin
  .side_column
  .sidebar_items
    width 240px
  .header_info
    margin auto auto auto 60px
    .site_big_title
      .title
        font-size $index_big_title_font_size*0.9
        line-height $index_big_title_font_size*0.9
      .subtitle
        font-size $index_subtitle_font_size*0.9
        line-height $index_subtitle_font_size*0.9
@media screen and (min-width: 841px)
  nav#mblNavbar
  .navbar_inner.mbl
    display none
@media screen and (max-width: 840px)
  #content-inner
    flex-direction column
  .side_column
  .sidebar_items
  .main_column
    width 100%
  .navbar_inner.pc
    display none
  .header_info
    .site_big_title
      .title
        font-size $index_big_title_font_size*0.8
        line-height $index_big_title_font_size*0.8
      .subtitle
        font-size $index_subtitle_font_size*0.8
        line-height $index_subtitle_font_size*0.8
@media screen and (max-width: 600px)
  #content-inner
    .recent-post-item
      flex-direction column
      height max-content
      .post_cover.side
        width 100%
        max-width 100%
        border-radius $border-radius $border-radius 0 0
        height 200px
        flex unset
      .post_info
        height max-content
        flex unset
        margin 0
  nav.page_switch
    margin-top 0
    .page_switch
      margin-top $block-margin
    .prev-post.pull-left
    .next-post.pull-right
      float none
      width 100%
      margin-top $block-margin
  .header_info
    margin auto auto auto $main_content_margin
    .site_big_title
      .title
        font-size $index_big_title_font_size*0.6
        line-height $index_big_title_font_size*0.6
      .subtitle
        font-size $index_subtitle_font_size*0.6
        line-height $index_subtitle_font_size*0.6